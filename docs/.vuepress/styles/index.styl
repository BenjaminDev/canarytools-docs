@require '~vuepress-plugin-tabs/dist/themes/default.styl'
@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:300,400,500,700')

html, body
    font-family: 'Avenir', Helvetica, Arial, sans-serif

main 
    & img
        padding: 10px
        border-style: solid 
        border-width: 1px
        border-color: $borderColor
        max-width: 95% !important

* 
  transition: background-color 0.5s ease

.theme-default-content, .page-nav, .page-edit
    padding-left: 2em
    padding-right: 2em

.site-name 
    background-color: inherit !important
    

.section-container
    display: flex
    justify-content: space-evenly
    flex-wrap: wrap
    margin-bottom: 2em

.details-content
    flex-grow: 1
    min-width: 200px
    max-width: 700px
    width: 200px
    padding-right: 2em

.example-content 
    flex-grow: 1
    min-width: 200px
    max-width: 700px
    width: 380px

.endpoints
    border: none
    box-shadow:  $boxShadow
    border-radius: 6px
    margin-bottom: 28px
    & .header
        border: none
        background-color: darken($codeBgColor, 15%)
        border-top-left-radius: 6px
        border-top-right-radius: 6px
        color: lighten($textColor, 65%)
        padding: 8px
        padding-left: 16px
        text-transform: uppercase
    & .content
        padding: 16px
        background-color: $codeBgColor
        border-bottom-left-radius: 6px
        border-bottom-right-radius: 6px

.endpoint .method
    display: inline-block
    width: 70px
    text-transform: uppercase
    &.POST
        color: #FFA72D
    &.GET
        color: #19a539
    &.DELETE
        color: $badgeErrorColor

.endpoint .url
    color: $accentColor

.api-example-response-header
    position: relative
    z-index: 1
    margin-bottom: -1.25em
    padding: 4px
    padding-left: 12px
    border-top-left-radius: 6px
    border-top-right-radius: 6px
    background-color: lighten($codeBgColor, 15%)
    color: lighten($textColor, 45%)
    text-transform: uppercase

.api-example-response [class*="language-"] 
    background-color: lighten($codeBgColor, 25%)
    color: lighten($textColor, 45%)
    border-top-left-radius: 0
    border-top-right-radius: 0
    & pre
        padding-left: 1.5rem !important 
        margin-top: 1.25em;
    & .line-numbers-wrapper
        display: none !important 
    
.tabs-component-tabs
    // ensure tabs don't change layout on small media
    display: flex !important
    margin-bottom: -1px

    justify-content: flex-end
    background-color: darken($codeBgColor, 15%)
    border: none 
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0
    & .tabs-component-tab:last-child
        margin-right: 40px

.tabs-component-tab
    background-color: darken($codeBgColor, 15%)
    color: lighten($textColor, 45%)
    margin: 0
    border: none
    &:hover:not(.is-active)
        color: lighten($textColor, 65%)
    &.is-active
        background-color: $codeBgColor

.tabs-component-panels
    padding: 0
    border: none
    border-radius: 6px
    border-top-left-radius: 0
    border-top-right-radius: 0
    & .tabs-component-panel [class*="language-"] 
        margin: 0
        border-top-right-radius: 0
        border-top-left-radius: 0

div[class*="language-"].line-numbers-mode
    & pre
        padding-left: 3rem
        padding-bottom: 0rem
    & .line-numbers-wrapper
        width: 2.5rem
    &:after
        width: 0rem
        border: none

.code-copy svg
    position: absolute;
    margin-top: 1.5em
    top: -48px !important
    z-index: 2;
    opacity: 1 !important
    border-left: 1px solid;
    padding-left: 5px;
    height: 18px
    width: 18px

.code-copy span
    margin-top: 1.75em
    right: 0px
    top: -75px !important

// allows us to reposition the copy button
pre.code-copy-added
    position: initial !important

div[class*=language-].line-numbers-mode .highlight-lines .highlighted:before
    display: none

.sidebar-group a.sidebar-link
    padding-left: 1.25rem !important

.custom-block
    &.tip, &.warning, &.danger, &.details
        max-width: 500px

.custom-block.details
    background-color: inherit
    padding: 0
    & summary 
        display: inline-block
        padding: 10px
        border-radius: 6px
        background-color: lighten($codeBgColor, 15%)
        color: #ccc
        box-shadow:  $boxShadow

.margin-top--20
    margin-top: 20px

@media (max-width: 419px)
    .section-container
        margin-left: -1.25em;
        margin-right: -1.25em;
        & .details-content
            margin-left: 1em
        & .example-content
            margin-left: 0
            margin-right: 0

    .api-example-response-header 
        border-radius: 0    
    
    .api-example-response [class*="language-"]
        margin-left: 0 !important
        margin-right: 0 !important
    
    .tabs-component-tabs
        border: none
        border-bottom: solid 1px 
        margin-bottom: 0px

    .code-copy svg
        opacity: 0.75 !important

.sidebar-links 
    padding-top: 0 !important

@require './dark'

.theme-dark
    bgcolor()
    fontcolor()
    bordercolor()

html.theme-dark
    bgcolor() 
